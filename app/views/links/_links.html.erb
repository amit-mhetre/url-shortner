<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Given url</th>
      <th>Shorten url</th>
      <th>Clicks</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @links.each do |link| %>
      <tr>
        <td><%= link.title %></td>
        <td><%= link.given_url %></td>
        <td><%= link_to BASE_URL + link.shorten_url, BASE_URL + link.shorten_url %></td>
        <td><%= link.clicks %></td>
        <td><%= link_to 'Edit', edit_link_path(link), class: "btn btn-sm btn-primary" %></td>
        <td><%= link_to 'Destroy', link, class: "btn btn-sm btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
